	<h1>Complaint Management System</h1>
	<%if (typeof result != 'undefined'){%>
		Filter By Department:  
		<select onchange="filterByDept()" id='filterByDeptName'>
            <option value="none">No Filter</option>			
			<option value='academic'>Academic</option>
			<option value='sport'>Sports</option>
			<option value='cafeteria'>Cafeteria</option>
		</select>
		<br/>
		<br/>
		Search By Email:
		<input type="text" id='search' onkeyup="search()" />
		<br/>
		<br/>
		<table>
			<tr>
				<th>ID</th>
				<th>Email</th>
				<th>Name</th>
				<th>Department</th>
				<th>Avg Rating</th>
				<th>Avg Days</th>
			</tr>
			<% for(var i = 0;i<result.length;i++){%>
				<tr class="data">
					<td><%=result[i].admin_id || result[i].secy_id%></td>
					<td class='subject'><%=result[i].admin_email || result[i].secy_email%></td>
					<td><%=result[i].admin_name || result[i].secy_name%></td>
					<td class="dept"><%=result[i].dept_name%></td>
					<td>
						<%if(result[i].stars != null){%>
							<%for(var j=0;j<5;j++){%>
								<%if(j<Number(result[i].stars)){%>
									<span class="fa fa-star checked"></span>
								<%}else{%>
									<span class="fa fa-star"></span>
								<%}%>
							<%}%>
						<%}else{%>
							<span>N/A</span>
						<%}%>
					</td>
					<td><%= result[i].days || 'N/A'%></td>
				</tr>

							
				<div class="card">

					<div class="image">
					<img src="https://upload.wikimedia.org/wikipedia/commons/thumb/8/85/Gfp-missouri-st-louis-clubhouse-pond-and-scenery.jpg/1199px-Gfp-missouri-st-louis-clubhouse-pond-and-scenery.jpg">
					</div>
					<div class="title">
					<h1><%=result[i].admin_name || result[i].secy_name%></h1>
					</div>
					<div class="des">
						<p><strong>Email: </strong><%=result[i].admin_email || result[i].secy_email%></p>
						<p>You can Add Desccription Here...</p>
						<p>Rating</p>
						<div class="Rating">	
							<%if(result[i].stars != null){%>
								<%for(var j=0;j<5;j++){%>
									<%if(j<Number(result[i].stars)){%>
										<span class="fa fa-star checked"></span>
									<%}else{%>
										<span class="fa fa-star"></span>
									<%}%>
								<%}%>
							<%}else{%>
								<span>N/A</span>
							<%}%>
						</div>
						<p>Average days to resolve <strong><%= result[i].days || 'N/A'%></strong></p>
					</div>
				</div>
			<%}%>
		</table>
	<%}else{%>
		<p>Data Not Found</p>
	<%}%>

</body>
